<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.UpdateZiTiSize_Activity">

    <include layout="@layout/putongtoolbar"/>

    <RelativeLayout
        android:id="@+id/xiao_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:text="小"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />


        <ImageView
            android:id="@+id/xiao_dui"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:visibility="gone"
            android:src="@mipmap/icon_duihao" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/line_color" />


    <RelativeLayout
        android:id="@+id/biaozhun_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:text="标准"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />


        <ImageView
            android:id="@+id/biaozhun_dui"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@mipmap/icon_duihao" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/line_color" />


    <RelativeLayout
        android:id="@+id/da_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:text="大"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />


        <ImageView
            android:id="@+id/da_dui"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@mipmap/icon_duihao" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/line_color" />


    <RelativeLayout
        android:id="@+id/teda_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:text="特大"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />


        <ImageView
            android:id="@+id/teda_dui"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@mipmap/icon_duihao" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/line_color" />


    <RelativeLayout
        android:id="@+id/chaoda_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:text="超大"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />


        <ImageView
            android:id="@+id/chaoda_dui"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:visibility="gone"
            android:src="@mipmap/icon_duihao" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/line_color" />


    <Button
        android:id="@+id/right_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/login_blue_bg"
        android:text="确定"
        android:textColor="@color/white" />
</LinearLayout>