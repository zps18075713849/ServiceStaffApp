<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.UpdateFuWuXiangMu_Activity">

    <include layout="@layout/sousuotoolbar2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_50">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_17"
                android:text="项目名称"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <com.haitian.servicestaffapp.view.MyEdtext
                android:id="@+id/projectname_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@null"
                android:gravity="right|center"
                android:hint="请输入名称"
                android:textSize="@dimen/sp_14" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ffe4e5ee" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_17"
                android:text="项目类型"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/projecttype_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@null"
                android:drawableRight="@mipmap/home_icon_more"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="right|center"
                android:hint="请选择"
                android:textSize="@dimen/sp_14" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ffe4e5ee" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_17"
                android:text="项目图片"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/addphoto_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@null"
                android:drawableRight="@mipmap/home_icon_more"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="right|center"
                android:hint="添加图片"
                android:textSize="@dimen/sp_14" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ffe4e5ee" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_17"
                android:text="项目价格"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/projectprice_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@null"
                android:drawableRight="@mipmap/home_icon_more"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="right|center"
                android:text="￥200"
                android:textSize="@dimen/sp_14" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ffe4e5ee" />

        <LinearLayout
            android:id="@+id/jianjie_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jianjietishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_17"
                android:gravity="right"
                android:padding="10dp"
                android:text="项目介绍"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_18">

                <com.haitian.servicestaffapp.view.MyEdtext
                    android:id="@+id/projectjianjie_ed"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/jianjie_shape"
                    android:gravity="top"
                    android:hint="输入内容"
                    android:padding="@dimen/dp_5"
                    android:textColor="@color/black"
                    android:textSize="18sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:padding="@dimen/dp_6"
                    android:src="@mipmap/zhaungshixian" />


            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/login_blue_bg"
        android:text="提交"
        android:textColor="@color/white" />

</RelativeLayout>