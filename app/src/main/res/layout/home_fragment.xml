<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_height="match_parent">


    <com.youth.banner.Banner
        android:id="@+id/banner_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200" />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/white">

        <ImageView
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:src="@mipmap/laba" />

        <ViewFlipper
            android:id="@+id/viewfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:autoStart="true"
            android:layout_marginLeft="@dimen/dp_44"
            android:background="@color/white" />

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_19"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/icon_forward" />

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_350"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5">

            <LinearLayout
                android:id="@+id/fuwutongji_line"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_116"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_37"
                    android:layout_height="@dimen/dp_38"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_fuwutongji" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="服务统计"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="match_parent"
                android:background="@color/background" />

            <LinearLayout
                android:id="@+id/pingjiatousu_line"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_116"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_37"
                    android:layout_height="@dimen/dp_38"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_pingjiatousu" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="评价投诉"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="match_parent"
                android:background="@color/background" />

            <LinearLayout
                android:id="@+id/fuwuxiangmu_line"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_116"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_37"
                    android:layout_height="@dimen/dp_38"
                    android:layout_gravity="center"
                    android:src="@mipmap/btn_project" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="服务项目"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2">

            <LinearLayout
                android:id="@+id/shangcheng_line"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_116"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_37"
                    android:layout_height="@dimen/dp_38"
                    android:layout_gravity="center"
                    android:src="@mipmap/btn_store" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="商城"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="match_parent"
                android:background="@color/background" />

            <LinearLayout
                android:id="@+id/gongdan_line"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_116"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_37"
                    android:layout_height="@dimen/dp_38"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_gongdan" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="工单"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="match_parent"
                android:background="@color/background" />
            <LinearLayout
                android:id="@+id/tongzhigonggao_line"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_116"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_37"
                    android:layout_height="@dimen/dp_38"
                    android:src="@mipmap/icon_tongzhigonggao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="通知公告"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/jifen_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_116"
                    android:layout_weight="0"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_37"
                        android:layout_height="@dimen/dp_38"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_jifen" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="积分"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_8"
                    android:background="@drawable/red_bg"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_16"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/dp_68"
                    />

            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/background" />

            <LinearLayout
                android:id="@+id/jiesuan_line"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_116"
                android:layout_weight="1"
                android:background="@color/white"
                android:visibility="gone"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_37"
                    android:layout_height="@dimen/dp_38"
                    android:src="@mipmap/icon_jiesuan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="结算"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/background" />

            <LinearLayout
                android:id="@+id/renwu_line"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_116"
                android:layout_weight="1"
                android:background="@color/white"
                android:visibility="gone"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_37"
                    android:layout_height="@dimen/dp_38"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_renwu" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="任务"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>