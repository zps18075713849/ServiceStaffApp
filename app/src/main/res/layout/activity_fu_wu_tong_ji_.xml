<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".activity.FuWuTongJi_Activity">

    <include layout="@layout/putongtoolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_21"
            android:text="选择时间"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/endtime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_19"
            android:drawableRight="@mipmap/icon_xiala"
            android:drawablePadding="@dimen/dp_5"
            android:text="2020-02-18"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/zhi_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@id/endtime_tv"
            android:text="至"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/starttime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/zhi_tv"
            android:drawableRight="@mipmap/icon_xiala"
            android:drawablePadding="@dimen/dp_5"
            android:text="2020-02-18"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>


    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/quanbu_rb"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_weight="1"
            android:background="@drawable/blue_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="全部"
            android:textColor="@color/white" />


        <RadioButton
            android:id="@+id/shangzhou_rb"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/white_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="上周"
            android:textColor="@color/hui_1" />

        <RadioButton
            android:id="@+id/shangyue_rb"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_weight="1"
            android:background="@drawable/white_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="上月"
            android:textColor="@color/hui_1" />

        <RadioButton
            android:id="@+id/shangjidu_rb"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_weight="1"
            android:background="@drawable/white_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="上季度"
            android:textColor="@color/hui_1" />

        <RadioButton
            android:id="@+id/shangbannian_rb"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_11"
            android:layout_weight="1"
            android:background="@drawable/white_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="上半年"
            android:textColor="@color/hui_1" />


    </RadioGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">

        <LinearLayout
            android:id="@+id/jibenxinxi_line"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_116"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gongdan_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="60"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_28" />


            <TextView
                android:id="@+id/gongdan_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="工单"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_22" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_6"
            android:layout_height="match_parent"
            android:background="@color/background" />

        <LinearLayout
            android:id="@+id/shebei_line"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_116"
            android:layout_marginRight="@dimen/dp_11"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/renwu_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="208"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_28" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="任务"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_22" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_11"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_14"
            android:text="工单分析"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_10"
        >

        <LinearLayout
            android:id="@+id/fuwutongji_line"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_116"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:text="+13%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_28"
                android:textColor="@color/black"
                android:layout_gravity="center" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="较上周"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_22" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pingjiatousu_line"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_116"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:text="+3%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_28"
                android:textColor="@color/black"
                android:layout_gravity="center" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="较上月"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_22" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/kehuguanli_line"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_116"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:text="+16%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_28"
                android:textColor="@color/black"
                android:layout_gravity="center" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="较上季度"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_22" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>