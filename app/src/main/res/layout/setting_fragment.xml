<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/denglu_bg"
    android:id="@+id/relative_id"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/photo_img"
        android:layout_width="@dimen/dp_68"
        android:layout_height="@dimen/dp_68"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_70"
        android:src="@mipmap/logo" />

    <TextView
        android:id="@+id/idcard_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/photo_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_12"
        android:text="18888888888"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_180"
        android:orientation="vertical"
        android:background="@drawable/setting_bg">

        <RelativeLayout
            android:id="@+id/minedatasetting_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_17"
                android:text="个人资料"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_13"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@mipmap/bangzhuzhongxin_right" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@color/line_color2"
            />

        <RelativeLayout
            android:id="@+id/update_password_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_17"
                android:text="修改密码"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_13"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@mipmap/bangzhuzhongxin_right" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@color/line_color2"
            />

        <RelativeLayout
            android:id="@+id/updateSize_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_17"
                android:text="字体设置"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_13"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@mipmap/bangzhuzhongxin_right" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@color/line_color2"
            />

        <RelativeLayout
            android:id="@+id/mine_Setting_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_17"
                android:text="我的设置"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_13"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@mipmap/bangzhuzhongxin_right" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@color/line_color2"
            />

        <RelativeLayout
            android:id="@+id/aboutAs_line"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="@dimen/dp_45">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_17"
                android:text="联系我们"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_13"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@mipmap/bangzhuzhongxin_right" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:visibility="gone"
            android:background="@color/line_color2"
            />

        <RelativeLayout
            android:id="@+id/banben_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_17"
                android:text="检查版本"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_13"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@mipmap/bangzhuzhongxin_right" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@color/line_color2"
            />

    </LinearLayout>


</RelativeLayout>