<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ForGetPassWord_Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_97"
            android:text="忘记密码"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_41"
            android:text="新密码"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18" />

        <com.haitian.servicestaffapp.view.MyEdtext
            android:id="@+id/newpassword_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:hint="请输入新密码"
            android:password="true"
            android:paddingTop="@dimen/dp_17"
            android:paddingBottom="@dimen/dp_15"
            android:textSize="@dimen/dp_12" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_29"
            android:text="确认密码"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18" />

        <com.haitian.servicestaffapp.view.MyEdtext
            android:id="@+id/newpassword_ed2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:hint="请输入密码"
            android:paddingTop="@dimen/dp_17"
            android:password="true"
            android:paddingBottom="@dimen/dp_15"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_29"
            android:text="手机号"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18" />

        <com.haitian.servicestaffapp.view.MyEdtext
            android:id="@+id/mobile_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:hint="请输入手机号"
            android:paddingTop="@dimen/dp_17"
            android:paddingBottom="@dimen/dp_15"
            android:textSize="@dimen/dp_12" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_29"
            android:text="验证码"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <com.haitian.servicestaffapp.view.MyEdtext
                android:id="@+id/mes_code_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_25"
                android:hint="请输入验证码"
                android:paddingTop="@dimen/dp_17"
                android:paddingBottom="@dimen/dp_15"
                android:textSize="@dimen/dp_12" />


            <Button
                android:id="@+id/getduanxin_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_25"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_3"
                android:background="@drawable/corners_shuang_lan"
                android:text="获取验证码"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_10"
                />

        </RelativeLayout>


        <Button
            android:id="@+id/right_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_76"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/login_blue_bg"
            android:text="确定"
            android:textColor="@color/white" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/dp_111"
            android:gravity="center">

            <TextView
                android:id="@+id/meiyou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="修改失败？"
                android:textColor="@color/zitihui2" />

            <TextView
                android:id="@+id/lijizhuce_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即联系管理员"
                android:textColor="@color/qianlan" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>