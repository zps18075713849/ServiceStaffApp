<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/zhuce_bg"
    android:layout_height="match_parent"
    tools:context=".activity.Register_Activity">


    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_106"
            android:text="欢迎来到服务人员APP"
            android:textColor="@color/black"
            android:visibility="invisible"
            android:textSize="@dimen/sp_22" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_41"
            android:text="账号"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18" />

        <com.haitian.servicestaffapp.view.MyEdtext
            android:id="@+id/mobile_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:hint="手机号"
            android:paddingTop="@dimen/dp_17"
            android:paddingBottom="@dimen/dp_15"
            android:textSize="@dimen/dp_12" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_41"
            android:text="密码"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18" />

        <com.haitian.servicestaffapp.view.MyEdtext
            android:id="@+id/password_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:hint="请输入密码"
            android:paddingTop="@dimen/dp_17"
            android:paddingBottom="@dimen/dp_15"
            android:password="true"
            android:textSize="@dimen/dp_12" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_29"
            android:text="验证码"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <com.haitian.servicestaffapp.view.MyEdtext
                android:id="@+id/mes_code_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_25"
                android:hint="请输入验证码"
                android:paddingTop="@dimen/dp_17"
                android:paddingBottom="@dimen/dp_15"
                android:textSize="@dimen/dp_12" />


            <Button
                android:id="@+id/getduanxin_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_25"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_3"
                android:background="@drawable/corners_shuang_lan"
                android:text="获取验证码"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_10"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/forgetpassword_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_25"
                android:text="忘记密码"
                android:textColor="@color/zitihui2" />

        </RelativeLayout>

        <Button
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/login_blue_bg"
            android:text="下  一  步"
            android:textColor="@color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_18">

            <CheckBox
                android:id="@+id/check_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我同意"
                android:textColor="@color/mydoctor_color"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/useragreement_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="@string/useragreement"
                android:textColor="@color/liji_c_blue" />


        </LinearLayout>


    </LinearLayout>


</ScrollView>