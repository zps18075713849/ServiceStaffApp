<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#f5f6fe"
    >

    <include
        android:id="@+id/comment_ll"
    />


    <LinearLayout
        android:layout_below="@+id/comment_ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/black"
                android:text="收货信息"
                android:padding="@dimen/dp_10"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line_color"
            />

        <LinearLayout
            android:id="@+id/address_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/address_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="请选择地址"
                    android:padding="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textSize="@dimen/sp_16"
                    />
                <TextView
                    android:id="@+id/address_mobile_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text=""
                    android:padding="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_16"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_21"
                    android:drawableRight="@mipmap/ic_launcher_round"
                    android:drawablePadding="@dimen/dp_5"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <TextView
                android:id="@+id/address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text=""
                android:paddingLeft="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_8"
                android:textSize="@dimen/sp_14"
                android:layout_marginBottom="@dimen/dp_10"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/goods_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_10"
            >

            <ImageView
                android:id="@+id/order_iv"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_90"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"

                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:id="@+id/mall_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black"
                        android:text="商品"
                        android:padding="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/mall_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/red"
                        android:text="商品"
                        android:padding="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_5"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:id="@+id/mall_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/red"
                        android:text=""
                        android:padding="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/mall_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/black"
                        android:text="X1"
                        android:padding="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_5"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/yaoqing_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:text="邀请码"
                    android:padding="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"

                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/zongjia_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_10"
                        android:text="邀请码"
                        android:padding="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_5"

                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/youhui_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_10"
                        android:text="邀请码"
                        android:padding="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_5"

                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/shifu_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_10"
                        android:text="邀请码"
                        android:padding="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_5"

                        android:layout_weight="1"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_10"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/black"
                android:text="订单信息"
                android:padding="@dimen/dp_10"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line_color"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/dingdan_bianhao_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="订单编号"
                android:padding="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_12"
                />
            <TextView
                android:id="@+id/dingdan_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="下单时间"
                android:padding="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_12"
                android:layout_marginBottom="@dimen/dp_10"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/shouhuo_comment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"

        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:text="确认收货"
        android:textColor="@color/white"
        android:visibility="gone"
        />


</RelativeLayout>