<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".activity.PingJiaTouSu_Activity">

    <include layout="@layout/sousuotoolbar" />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/white"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_114"
            >

            <ImageView
                android:id="@+id/img_id"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_11"
                android:src="@drawable/red_bg" />

            <TextView
                android:id="@+id/mobile_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_toRightOf="@id/img_id"
                android:text="13333333333"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <me.zhouzhuo.zzratingbar.ZzRatingBar
                android:id="@+id/xing_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mobile_tv"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_toRightOf="@id/img_id"
                android:clickable="false"
                app:zrb_rating="3"
                app:zrb_star_count="5"
                app:zrb_star_dimension="@dimen/dp_12" />


            <TextView
                android:id="@+id/fuwuleixing_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_10"
                android:text="服务类型：家政"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:checked="true"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_10"
                android:visibility="gone"
                />


            <TextView
                android:id="@+id/fuwuneirong_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/xing_bar"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_10"
                android:text="服务内容：打扫卫生"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/fuwutime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fuwuneirong_tv"
                android:layout_marginLeft="@dimen/dp_14"
                android:text="服务时间：2020-07-02 13：00 ~ 15：00"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/fuwu_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fuwutime_tv"
                android:layout_marginLeft="@dimen/dp_14"
                android:text="地址：北京海淀区康德大厦2-098"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_16"
                android:text="¥200"
                android:textColor="@color/liji_material_red_500"
                android:textSize="@dimen/sp_14" />


            <Button
                android:id="@+id/zhuanchu_btn"
                android:layout_width="@dimen/dp_88"
                android:layout_height="@dimen/dp_28"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginBottom="@dimen/dp_14"
                android:background="@drawable/blue_bg"
                android:text="转出"
                android:visibility="gone"
                android:textColor="@color/white" />


            <Button
                android:layout_width="@dimen/dp_88"
                android:layout_height="@dimen/dp_28"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/dp_50"
                android:layout_marginBottom="@dimen/dp_14"
                android:background="@drawable/blue_bg"
                android:text="接单"
                android:visibility="gone"
                android:textColor="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@id/fuwu_address"
                android:layout_marginTop="@dimen/dp_15"
                android:background="#ffeceef6" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                >

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_10"
                    android:src="@drawable/red_bg"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="罗燕"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/dp_10"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2020-02-02"
                        android:layout_marginLeft="@dimen/dp_10"
                        />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刚收到就用上了，很好用"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:text="13611118888"
                    android:textColor="@color/black"
                    android:visibility="invisible"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:text="小年转入"
                    android:textColor="@color/black"
                    android:visibility="invisible"
                    android:textSize="@dimen/sp_14" />

                <Button
                    android:layout_width="@dimen/dp_58"
                    android:layout_height="@dimen/dp_24"
                    android:background="@drawable/chengse_bg"
                    android:layout_gravity="center"
                    android:text="拒绝"
                    android:layout_marginLeft="@dimen/dp_50"
                    android:textColor="@color/white"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/huifu_btn"
                    android:layout_width="@dimen/dp_58"
                    android:layout_height="@dimen/dp_24"
                    android:background="@drawable/blue_bg"
                    android:text="回复"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="@color/white"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>